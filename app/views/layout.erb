    <title>BillsApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    </head>
    <body>
    <div class="wrapper">
    <nav>
    <% if logged_in? %>
          <a href="/logout">Log Out</a> |
          <a href="/users">All Users</a> |
          <a href="/expenses">All Expenses</a> |
          <a href="/expenses/new">Add New Expense</a> |

        <% else %>
          <a href="/users/new">Sign Up!</a> |
          <a href="/login">Login!</a>
        <% end %>
        </nav>
          
        <% if flash[:errors] %>
        <ul class="errors">
          <% flash[:errors].each do |error|%>
            <li><%=error%></li>
          <% end %>
        </ul>
       <% end %>

        <%= yield %>

      <footer class="branding">
      <a href="https://github.com/danyalshah3/sinatra_project_bills" class="link" target="_blank">
      Github Repo
    </a>
    <br>
    <a href="https://danyalm50.medium.com/sinatra-project-build-e080ed02c66d" class="link" target="_blank">
      Blog Post
    </a>
    <br>

    <a href="https://www.youtube.com/watch?v=-88BcqhXljA" class="link" target="_blank">
      Video Demo
    </a>
    <br>
        <small>&copy; 2021 <strong>BillsApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
